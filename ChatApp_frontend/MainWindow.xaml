<Window x:Class="ChatApp_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp_frontend"
        mc:Ignorable="d"
        Title="ChatApp" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="Aqua">
            <Label Content="Name" Padding="10" Background="Aqua"></Label>
            <TextBox x:Name="sender_name" Padding="10" FontSize="15"></TextBox>
            <Label Content="Message" Padding="10" Background="Aqua"></Label>
            <TextBox x:Name="message" Padding="10" FontSize="15"></TextBox>
            <Button Content="Send" Padding="15" Click="Button_Click"></Button>
        </StackPanel>
        <TextBox Grid.Column="1" Margin="5" FontSize="15" IsEnabled="False" x:Name="chat"></TextBox>
    </Grid>
</Window>
